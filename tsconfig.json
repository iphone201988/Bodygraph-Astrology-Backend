{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",  // Choose the ECMAScript version you want
    "strict": true,      // Enable strict type-checking
    "skipLibCheck": true,  // Optional: to speed up compilation by skipping library checks
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
